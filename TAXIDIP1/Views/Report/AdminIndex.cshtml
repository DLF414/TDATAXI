
@{
    ViewData["Title"] = "AdminIndex";
}

<h2>AdminIndex</h2>

<h4>Clients</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdminIndex">
            <input checked="checked" name="role" type="radio" value="client"  />
            <span>Клиент</span>
            <input name="role" type="radio" value="driver"  />
            <span>Водитель</span> <br />
            <p>
                <label>Логин:</label>
                <input type="text" name="login" class="form-control" /><br />
            </p>
            <label>Стартовая дата:</label>
            <input type="date" name="start" asp-format="{0:yyyy-MM-dd}" class="form-control" /><br />
            <label>Конечная дата:</label>
            <input type="date" name="end" asp-format="{0:yyyy-MM-dd}" class="form-control" />

            <div class="form-group">
                <input type="submit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

